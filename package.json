{
  "name": "erp-backend",
  "private": "true",
  "version": "0.0.0",
  "scripts": {
    "build": "rimraf ./dist && tsc --build ./tsconfig.json",
    "dev": "node-dev --respawn ./src/index.ts",
    "prettify": "prettier --log-level warn --cache --write '{src/**/*,*}.{ts,js,json,yml}' '!**{node_modules,dist}/**/*'",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts ."
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "node": "link:/node",
    "node-dev": "^8.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
